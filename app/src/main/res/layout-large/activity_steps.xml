<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/steps_activity_padding"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <fragment
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:id="@+id/ingredients_fragment"
            android:name="nnamdi.android.bakingapp.IngredientsFragment"></fragment>

        <fragment
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:id="@+id/steps_fragment"
            android:name="nnamdi.android.bakingapp.StepsFragment"></fragment>

    </ScrollView>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:id="@+id/details_container"></FrameLayout>

</LinearLayout>
